<%- include("header") -%>

<div id="heading" class="box">
    <h1>
        <%= listTitle %>
    </h1>
</div>

<div class="box">
    <% for(let i=0; i < items.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p>
                <%= items[i] %>
            </p>
        </div>
        <% } %>
        <form class="item" action="/" method="post">
            <input id="newItem" type="text" placeholder="New Item" name="newItem" autocomplete="off">
            <button type="submit" name="button" value=<%=listTitle %>>+</button>
        </form>
</div>

<%- include("footer") -%>